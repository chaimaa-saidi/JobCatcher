 <div class="main2">
 <section class="sign-in">
            <div class="container2">
                <div class="signin-content">
                    <div class="signin-image">
                        <figure><img src="/signup/images/signin-image.jpg" alt="sing up image"></figure>
                         <%= render "devise/shared/links" %>
                        
                    </div>

                    <div class="signin-form">
                          <h2 class="form-title">Se connecter</h2>

                          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="form-group" >
                              <%= f.label :email  , class:"zmdi zmdi-email"%><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                            </div>

                            <div class="form-group">
                              <%= f.label :Mot_de_passe , class:"zmdi zmdi-lock"%> <br />
                            
                              <%= f.password_field :password, autocomplete:"current_password" %>
                            </div>
                            

                            

                            <div class="form-group form-button">
                              <%= f.submit "Se connecter", class:"form-submit" %>
                            </div>
                          <% end %>

                         
                            <div class="social-login">
                                <span class="social-label">Or login with</span>
                                <ul class="socials">
                                    <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                                    <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                                    <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                                </ul>
                            </div>
                     </div>
                </div>
            </div>
    </section>

    </div>

    <!-- JS -->
    <script src="/signup/vendor/jquery/jquery.min.js"></script>
    <script src="/signup/js/main.js"></script>

