<div class="main2">
<section class="signup">
            <div class="container2">
                <div class="signup-content">
                    <div class="signup-form">
                      <h2 class="form-title">S'inscrire</h2>
                      
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                            <%= render "devise/shared/error_messages", resource: resource %>

                            <div class="form-group" >
                              <%= f.label :email  , class:"zmdi zmdi-email"%><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                            </div>
                            <div class="form-group">
                              <%= f.label :Nouveau_mot_de_passe , class:"zmdi zmdi-lock"%> <br />
                            
                              <%= f.password_field :password, autocomplete:"new_password" %>
                            </div>
                            <div class="form-group">
                              <%= f.label :Confirmer_votre_mot_de_passe , class:"zmdi zmdi-lock"%> <br />
                            
                              <%= f.password_field :password, autocomplete:"new_password" %>
                            </div>
                             
                              
                            
                              

                            <div class="form-group form-button">
                              <br> <%= f.submit "S'inscrire", class:"form-submit" %>
                            </div>

                            
                          <% end %>
                      
                      </div>
                          
                            <div class="signup-image">
                                  <figure><img src="/signup/images/signup-image.jpg" alt="sing up image"></figure>
                              <%= render "devise/shared/links" %>
                                
                            </div>
                </div>
            </div>
    </section>
</div>
 <script src="/signup/vendor/jquery/jquery.min.js"></script>
   